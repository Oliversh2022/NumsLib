<view class="safe-area-top"><view class="container"><view class="card"><view class="section"><text class="label">金额</text><input class="input" placeholder="请输入金额" type="number" data-event-opts="{{[['input',[['onAmountInput',['$event']]]]]}}" bindinput="__e"/></view><view class="section"><text class="label">分类</text><picker mode="selector" range="{{categories}}" data-event-opts="{{[['change',[['onCategoryChange',['$event']]]]]}}" bindchange="__e"><view class="input">{{category||'请选择分类'}}</view></picker></view><view class="section"><text class="label">备注</text><input class="input" placeholder="添加备注（如：奶茶、吃饭）" data-event-opts="{{[['input',[['onNoteInput',['$event']]]]]}}" bindinput="__e"/></view><view class="section"><text class="label">日期</text><input class="input" type="date" data-event-opts="{{[['input',[['onDateChange',['$event']]]]]}}" value="{{date}}" bindinput="__e"/></view><view class="type-buttons"><view class="{{['type-btn '+(type==='支出'?'active':'')]}}" data-type="支出" data-event-opts="{{[['tap',[['handleTypeChange',['$event']]]]]}}" bindtap="__e">支出</view><view class="{{['type-btn '+(type==='收入'?'active':'')]}}" data-type="收入" data-event-opts="{{[['tap',[['handleTypeChange',['$event']]]]]}}" bindtap="__e">收入</view></view><button data-event-opts="{{[['tap',[['handleSave',['$event']]]]]}}" class="save-btn" bindtap="__e">保存账单</button></view></view></view>